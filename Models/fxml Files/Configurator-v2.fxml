<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ToggleSwitch?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Radio configurator" BorderPane.alignment="CENTER">
         <font>
            <Font name="Verdana" size="18.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="46.0" prefWidth="160.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Launch" />
            <Button mnemonicParsing="false" text="Cancel" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <left>
      <VBox prefWidth="15.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefWidth="15.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox prefWidth="180.0" promptText="Screen size" />
            <ToggleSwitch prefHeight="18.0" prefWidth="180.0" text="Autotune">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefHeight="18.0" prefWidth="180.0" text="Secondary speaker">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefHeight="18.0" prefWidth="180.0" text="External audio input">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefWidth="180.0" text="External audio output">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefWidth="180.0" text="Automatic date/time">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefWidth="180.0" text="Alarm functionality">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefWidth="180.0" text="Breaking news">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
            <ToggleSwitch prefWidth="180.0" text="FM radio">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font></ToggleSwitch>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
   </padding>
</BorderPane>
